<div class="container">

  <div class="flex-1">
    <div class="photo">
      <%= cl_image_tag @granny.photo.key, height: 300, width: 400, crop: :fill, class:"img_show"%>
    </div>

    <div class="granny_info">
      <h1><strong><%= @granny.nickname %></strong></h1>
      <div class="ratings">
        <div class="ratings-flex-box">
          <span class="bold"> ⭐️ 4.89</span>
          <span class="underlined">25 reviews</span>
        </div>
        <span>❤️ save</span>
      </div>
      <div class="interesting_facts">
        <h3>Special Skills</h3>
        <div class="ratings">
          <% @granny.skills.each do |skill| %>
            <button type="button" class="btn btn-primary btn-sm"><%= skill.name %></button>
          <% end %>
        </div>
      </div>

      <div class="interesting_facts">
        <h4>Interesting Facts</h4>
          <ul>
            <li><strong>Date of birth: </strong><%= @granny.born_at%></li>
            <li><strong>Fun fact: </strong><%= @granny.fun_fact%></li>
            <li><strong>Description: </strong><%= @granny.description%></li>
          </ul>
      </div>
    </div>
  </div>

  <div class=flex-2>
    <div>
      <h2>Reviews</h2>
            <% if @reviews.any? %>
              <div class="notification">
              <% @reviews.each do |review| %>
                  <div class="notification-row">
                    <%= image_tag "logo_granny.png", class: "avatar-large"%>
                    <div class="notification-content">
                      <div class="notification-row">
                        <p><small>Paul</small></p>
                        <p>⭐️ <%= review.rating %></p>
                      </div>
                      <p> <%= review.comment %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p>  There are no reviews for <%=@granny.nickname%> yet.</p>
            <%end %>
    </div>

     <div class="book-card">
        <p><strong>Book <%= @granny.nickname %>!</strong></p>
        <ul>
          <li><%= @granny.email %></li>
          <li><%= @granny.telephone_number %></li>
          <li><%= @granny.address %></li>
        </ul>
          <div>
            <%= link_to new_granny_booking_path(@granny) do %>
              <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-booking"></i> Book <%= @granny.nickname %>
              </button>
              <% end %>
          </div>
      </div>
  </div>
</div>

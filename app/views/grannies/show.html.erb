<div id="container">
  <div class="show-title">
    <h1><strong><%= @granny.nickname %></strong></h1>
      <div class="ratings">
      <div class="rating">
        <p class="bold"> 4.89</p>
        <p class="underlined">25 reviews</p>
      </div>
        <p>❤️ save</p>
      </div>
  </div>

  <div class="flex">
    <div class="">
      <div class="facts">
        <div class="granny_intro">
          <%= cl_image_tag @granny.photo.key, height: 300, width: 400, crop: :fill, class:"img_show"%>
        </div>
        <div class="interesting_facts">
          <h3>Interesting Facts</h3>
            <ul>
              <li><strong>Date of birth: </strong><%= @granny.born_at%></li>
              <li><strong>Name: </strong><%= @granny.first_name %> <%= @granny.last_name %></li>
              <li><strong>Fun fact: </strong><%= @granny.fun_fact%></li>
              <li><strong>Description: </strong><%= @granny.description%></li>
            </ul>
        </div>

      <div class="book-card">
        <p><strong>Book <%= @granny.first_name %></strong></p>
        <ul>
          <li><%= @granny.email %></li>
          <li><%= @granny.telephone_number %></li>
          <li><%= @granny.address %></li>
        </ul>

          <div class="">
            <%= link_to new_granny_booking_path(@granny) do %>
              <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-booking"></i> Book <%= @granny.first_name %>
              </button>
              <% end %>
          </div>
      </div>
    </div>

    <h2>Reviews</h2>
    <% if @reviews.any? %>
      <div class="notification">
      <% @reviews.each do |review| %>
          <div class="notification-row">
            <%= image_tag "logo_granny.png", class: "avatar-large"%>
            <div class="notification-content">
              <p><small>[booking date]</small></p>
              <p><strong>[user name]</strong> <%= review.comment %><strong> [star] <%= review.rating %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>  There are no reviews for <%=@granny.nickname%> yet.</p>
    <%end %>


  </div>


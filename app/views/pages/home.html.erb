<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path('cool_granma.png') %>');">
  <div class="search-banner">
    <h1>Rent a <strong>Granny</strong> for <strong>the day</strong></h1>
    <p>Check out our grannies !</p>
    <%= render "shared/search" %>
  </div>
</div>
<div class="container my-3">
  <div class="cards">
    <% @grannies.each do|granny| %>
      <%= link_to granny_path(granny) do %>
        <div class="card-category"
             style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(<%= cl_image_path granny.photo.key, crop: :fill %>)";>
          <div class="content d-flex justify-content-between w-100">
            <div class="first-name"><%= granny.first_name %></div>
            <div class="price"><%= granny.price %> â‚¬</div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
